app.get('/search', (req, res) => {
  let search = req.query.search;
  Products.find({
    $or: [
      {pname: { $regex: search} },
      {pdesc: { $regex: search} },
      {price: { $regex: search}},
    ]
  })
    .then((result) => {
      res.send({ message: 'success', product: result })
    })
    .catch((err) => {
      res.send({ message: ' server error in search ' })
    })
});
