app.get('/get-user/:uId', async (req, res) => {
  const _userId = req.params.uId;
  Users.findOne({ _id: _userId })
    .then((result) => {
      res.send({ message: " sucess. ", user: result })
    })
    .catch(() => {
      res.send({ message: " server error in user  " })
    })
})
